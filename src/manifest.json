{
    "manifest_version": 2,
    "name": "Deepl Firefox Translator",
    "version": "1.0",

    "description": "Uses Deepl to translate selected text on a webpage.",
    "homepage_url": "https://github.com/hermancai/deepl_moz_ext",

    "icons": {
        "48": "images/favicon.png"
    },

    "permissions": ["*://api.deepl.com/*", "activeTab", "contextMenus", "storage"],

    "background": {
        "scripts": ["background.js"]
    },

    "browser_action": {
        "default_icon": "images/favicon.png",
        "default_title": "Deepl Firefox Translator",
        "default_popup": "popup/popup.html"
    }
}